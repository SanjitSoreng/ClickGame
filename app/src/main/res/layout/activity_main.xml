<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="392dp"
            android:id="@+id/gridLayout" android:layout_marginTop="134dp" android:layout_marginBottom="134dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv1"
                app:layout_column="1" app:layout_row="1"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv2"
                app:layout_column="2" app:layout_row="1"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv3"
                app:layout_column="3" app:layout_row="1"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv4"
                app:layout_column="1" app:layout_row="2"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv5"
                app:layout_column="2" app:layout_row="2"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv6"
                app:layout_column="3" app:layout_row="2"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv7"
                app:layout_column="1" app:layout_row="3"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv8"
                app:layout_column="2" app:layout_row="3"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" app:srcCompat="@drawable/fornite"
                android:id="@+id/iv9"
                app:layout_column="3" app:layout_row="3"
                android:onClick="increaseScore"/>


    </android.support.v7.widget.GridLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvTimer" android:textSize="56sp" android:text="50"
            android:textAlignment="center" android:textColor="@color/colorAccent"
            android:gravity="center|center_horizontal|center_vertical" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.862"/>
    <TextView
            android:text="Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvScore" android:textSize="36sp"
            android:textColor="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.548"
            app:layout_constraintHorizontal_bias="0.35"/>
</android.support.constraint.ConstraintLayout>